<% if user_signed_in? %>
    <% if book.favorited_by?(current_user) %>
        <p>
        ❤<%= link_to book.favorites.count, book_favorites_path(book.id),  method: :delete, remote: true  %>いいね
        </p>
    <% else %>
        <p>
          ♡<%= link_to book.favorites.count, book_favorites_path(book.id), method: :post, remote: true  %>いいね
         </p>
    <% end %>
<% else %>
    <p><span>お気に入り数: </span><%= book.favorites.count %></p>
<% end %>